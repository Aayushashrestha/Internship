include <iostream>
Using namespace std;

string cars[3] [3] = {{"Volvo", "001", "500" }, {"BMW", "002", "750"}, {"Ford", "003", "600"}};

Void generateBIll() {
{
    cout<<"List of Books \n";
for(int i = 0; i < 3; i++) {
    for(int j = 0; j < 3; j++) {
          cout  << cars[i][j] <<"\t";
    }
    cout<< "\n";
}
}
cout<<”Bill generated”;

}

Void EditPriceList(){
cout<<”Price has been edited”;
}

Void ViewPriceList(){
cout<<”Price list has been viewed”;
}
Void invalidOption(){
cout<<”Invalid Option”;
}

